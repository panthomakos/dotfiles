Config {
font = "xft:Bitstream Vera Sans Mono:size=5:antialias=true"
, bgColor = "black"
, fgColor = "grey"
, position = Top
, lowerOnStart = True
, commands = [ Run Wireless "wlp58s0" ["-t","<essid>"] 10
             , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
             , Run Com "/home/pan/.xmonad/vpn.sh" [] "vpn" 10
             , Run Memory ["-t","Mem: <usedratio>%"] 10
             , Run Date "%a %Y %m %d %H:%M:%S" "date" 10
             , Run Battery [ "-t", "<left>% (<timeleft>)"
                            , "-L", "50", "-H", "75"
                            , "-h", "green", "-n", "yellow", "-l", "red" ] 10
             , Run Com "/home/pan/.xmonad/volume.sh" [] "vol" 10
             , Run Com "/home/pan/.xmonad/bright.sh" [] "bright" 10
             , Run StdinReader
             ]
, sepChar = "%"
, alignSep = "}{"
, template = "%cpu% | %memory% | %vpn% | %wlp58s0wi% | %battery% | %StdinReader% }{ %vol% | %bright% | <fc=#ee9a00>%date%</fc>"
}

