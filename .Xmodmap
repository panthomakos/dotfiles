! Fix Mac Grave/Tilde Key
keycode 94 = grave asciitilde

! Clear all modifiers
clear      lock
clear   control
clear      mod1
clear      mod2
clear      mod3
clear      mod4
clear      mod5

! Make Control_L the Mode_switch Key
keycode 37 = Mode_switch

! Ensure CMD Key is mapped to Super_L and Super_R
keycode 133 = Super_L NoSymbol Super_L
keycode 134 = Super_R NoSymbol Super_R

! Configure modifiers
add     control = Control_L Control_R
add        mod1 = Alt_L Alt_R Meta_L
add        mod2 = Num_Lock
add        mod3 = Hyper_L
add        mod4 = Super_L Super_R
add        mod5 = Mode_switch ISO_Level3_Shift

! Add numbers to top row
keycode  24 = q Q 1 Q
keycode  25 = w W 2 W
keycode  26 = e E 3 E
keycode  27 = r R 4 R
keycode  28 = t T 5 T
keycode  29 = y Y 6 Y
keycode  30 = u U 7 U
keycode  31 = i I 8 I
keycode  32 = o O 9 O
keycode  33 = p P 0 P

! Add symbols to home row
keycode  38 = a A grave A
keycode  39 = s S exclam S
keycode  40 = d D at D
keycode  41 = f F numbersign F
keycode  42 = g G dollar G
keycode  43 = h H percent H
keycode  44 = j J asciicircum J
keycode  45 = k K ampersand K
keycode  46 = l L asterisk L

! Add parens to bracket and brace keys
keycode  34 = bracketleft braceleft parenleft braceleft
keycode  35 = bracketright braceright parenright braceright
